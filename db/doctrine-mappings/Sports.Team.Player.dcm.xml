<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sports\Team\Player" table="teamPlayers" repository-class="Sports\Repositories\TeamPlayerRepository">
        <field name="shirtNumber" column="shirtNumber" type="smallint" nullable="true" unique="false"/>
        <field name="line" column="line" type="smallint" nullable="false" unique="false"/>
        <field name="marketValue" column="marketValue" type="bigint" nullable="false" unique="false"/>
        <one-to-many field="gameParticipations" target-entity="Sports\Game\Participation" mapped-by="player">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>