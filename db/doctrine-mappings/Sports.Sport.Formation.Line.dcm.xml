<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Sports\Sport\Formation\Line" table="formationLines" repository-class="Sports\Sport\Formation\Line\Repository">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="number" column="number" type="smallint" nullable="false" unique="false"/>
    <field name="nrOfPlayers" column="nrOfPlayers" type="smallint" nullable="false" unique="false"/>
    <many-to-one field="formation" target-entity="Sports\Sport\Formation">
      <join-columns>
        <join-column name="formationId" referenced-column-name="id" nullable="true" on-delete="CASCADE"/>
      </join-columns>
    </many-to-one>
    <unique-constraints>
      <unique-constraint columns="formationId,number" name="fomrationline_u1_idx" />
    </unique-constraints>
  </entity>
</doctrine-mapping>